<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/planets_info_picture"
        android:layout_width="115dp"
        android:layout_height="match_parent"
        android:adjustViewBounds="false"
        app:srcCompat="@drawable/planet_earth" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/planets_info_title"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Erde"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPlanetNames"
            android:textStyle="bold"
            android:visibility="visible" />

        <EditText
            android:id="@+id/planets_info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:ems="10"
            android:inputType="textMultiLine"
            android:text="Text for testing purposes"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>